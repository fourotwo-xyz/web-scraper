# ── Server ──────────────────────────────────────────────
PORT=8080
BASE_URL=http://localhost:8080

# ── TLS ──────────────────────────────────────────────

# Your domain name (required for TLS)
DOMAIN=

# Port your application listens on
APP_PORT=8080

# Enable Caddy debug logs
ENABLE_CADDY_LOGS=true

# Use Let's Encrypt staging environment (for testing)
# Set to true to avoid rate limits during development
ACME_STAGING=false

# Force certificate reissue even if a valid one exists
# Useful when you need to update SANs or force a renewal
ACME_FORCE_ISSUE=false


# ── x402 Payment ─────────────────────────────────────────
# Wallet that receives USDC payments on Base
PAYMENT_RECEIVER_ADDRESS=0xYourWalletAddressHere

# Facilitator URL (default: testnet — x402.org)
# Mainnet examples:
#   https://api.developer.coinbase.com/x402/facilitator
#   https://facilitator.openx402.ai
#   https://facilitator.infra402.com
X402_FACILITATOR_URL=https://x402.org/facilitator

# CAIP-2 network: eip155:84532 = Base Sepolia, eip155:8453 = Base Mainnet
X402_NETWORK=eip155:84532

# ── Simplescraper (required for POST /scrape) ─────────────
# https://simplescraper.io/docs/api-guide
SIMPLESCRAPER_API_KEY=
